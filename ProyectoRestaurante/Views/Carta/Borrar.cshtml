@model Carta
@{
    ViewData["Title"] = "Eliminar un plato del menú";
}
<h3 class="mb-3">¿Está seguro de eliminar el plato: @Model.nombre_plato?</h3>
<form asp-action="BorrarPlato">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>