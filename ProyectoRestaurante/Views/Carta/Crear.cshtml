@model CartaCreacionViewModel
@{
    ViewData["Title"] = "Crear plato del menú";
}

<h1>Crear un plato de la carta</h1>
<h5>Registra un nuevo plato</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
    <div class="mb-3" hidden>
        <label asp-for="id" class="form-label">Id</label>
        <input type="text" asp-for="id" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="nombre_plato" class="form-label">Nombre</label>
        <input type="text" asp-for="nombre_plato" class="form-control"/>
        <span asp-validation-for="nombre_plato" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="tipo_plato" class="form-label">Tipo</label>
        <select asp-for="tipo_plato" asp-items="Model.TiposPlatos" class="form-select"></select>
        <span asp-validation-for="tipo_plato" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="precio_plato" class="form-label">Precio</label>
        <input type="number" asp-for="precio_plato" class="form-control" />
        <span asp-validation-for="precio_plato" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="descripcion" class="form-label">Descripción</label>
        <textarea asp-for="descripcion" class="form-control"></textarea>
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancelar</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
