@model DetallePedidos
@{
    ViewData["Title"] = "Borrar Plato";
}
<h3 class="mb-3">¿Está seguro de eliminar el serial: @Model.id_detalle?</h3>
<form asp-action="BorrarDetalle">
    <input type="hidden" asp-for="id_detalle" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
